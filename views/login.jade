  div(class="container" )
    h1 Welcome to the login page
    form(action="/tasks/login", method="post")
      input(type="text", class="form-control", name="email", placeholder="Email")
      input(type="password", class="form-control", name="password", placeholder="Password")
      button(type="submit", class="btn btn-primary btn-lg") Login

    a(href="/tasks/auth/facebook" class="btn btn-primary")
      span(class="fa fa-facebook")  Facebook 

    p Need an account?  
      a(href="/tasks/signup") Signup


